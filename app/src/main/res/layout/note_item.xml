<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:text="Example of title"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/tv_note_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19/10/2016"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_note_title"/>

    <TextView
        android:id="@+id/tv_note_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_note_date"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Aliquam augue nulla, posuere non sollicitudin a, accumsan vel odio. Vivamus..."/>

    <View
        android:id="@+id/view_gravity"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@+id/tv_note_title"
        android:layout_alignParentStart="true"
        android:background="@color/gravity_alert"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@+id/tv_note_description"
        android:layout_marginTop="10dp"/>

</RelativeLayout>